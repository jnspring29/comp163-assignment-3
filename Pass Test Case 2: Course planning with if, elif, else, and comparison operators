print("\nChoose your course load:")
print("A) Light (12 credits)")
print("B) Standard (15 credits)")
print("C) Heavy (18 credits)")

course_choice = input("Your choice: ")

if course_choice == "A":
    if current_gpa >= 3.0:
        study_hours = 2
        stress_level = 5
    else:
        stress_level = 5
elif course_choice == "B":
    if current_gpa < 2.5:
        stress_level = 10
    else:
        study_hours = 1
elif current_gpa == "C":
    if current_gpa >= 3.5:
        study_hours = 5
        stress_level = 5
    else:
        stress_level = 15
else:
    print("Invalid input")
